check process my-portfolio with pidfile "/var/run/my-portfolio.pid"
  start program "/bin/bash -c 'cd /srv/www/current ; node server.js & ; echo "$!" > /var/run/my-portfolio.pid"
  stop program "/usr/bin/pkill -f 'node'"
